<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clBackAcc">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/back1"
        android:scaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B8000000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <include
        android:id="@+id/viewLogin"
        layout="@layout/view_login"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <include
        android:id="@+id/viewSignup"
        layout="@layout/view_sign_up"
        android:visibility="gone"/>

    <include android:id="@+id/viewForgotPass"
        layout="@layout/view_forgot_pass"
        android:visibility="gone"/>

    <include android:id="@+id/viewChangePass"
        layout="@layout/view_change_pass"
        android:visibility="gone"/>


    <include android:id="@+id/viewInputVerifyCode"
        layout="@layout/view_input_verify_code"
        android:visibility="gone"/>

    <include android:id="@+id/viewChangePassSuccess"
        layout="@layout/view_change_pass_success"
        android:visibility="gone"/>



</androidx.constraintlayout.widget.ConstraintLayout>